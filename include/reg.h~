	struct maillon*	suiv
}* pile;
*/

/* #define	$0		0 		utile ? */

reg init_reg(char* name, char* mnemo);
void del_reg (reg registre);
reg init_tab_reg(void);



#ifdef __cplusplus
}
#endif

#endif /* _MEM_H_ */
