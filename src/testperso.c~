#include <stdlib.h>
#include <stdio.h>
#include <string.h>

/* macros de DEBUG_MSG fournies , etc */
#include "common/notify.h"

int is_hexa(char* chaine) 
{
    int i,j; 
    int k=1; 
    int l=strlen(chaine);
    if (strlen(chaine)>2) /* si la longueur de la chaine est superieure a deux caracteres */ 
    {
    for(j=2;j<l;j++) 
	   {
	   if (chaine[j]<10 || chaine[j]=='a' || chaine[j]=='b' || chaine[j]=='c' || chaine[j]=='d' || chaine[j]=='e' || chaine[j]=='f') k++;
	   }
    }
    return (chaine!=NULL && strlen(chaine)>2 && chaine[0]=='0' && chaine[1]=='x' && sscanf(chaine,"%x",&i)==1 && strlen(chaine) <11 && k==j);
}

int is_byte(char* chaine) 
{
    return (chaine!=NULL && (chaine[0]%2)==chaine[0] && (chaine[1]%2)==chaine[1] && (chaine[2]%2)==chaine[2] && (chaine[3]%2)==chaine[3] && (chaine[4]%2)==chaine[4] && (chaine[5]%2)==chaine[5] && (chaine[6]%2)==chaine[6] && (chaine[7]%2)==chaine[7] && strlen(chaine)==8);
}

